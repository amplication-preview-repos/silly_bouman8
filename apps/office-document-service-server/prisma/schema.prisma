datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Folder {
  createdAt    DateTime @default(now())
  id           String   @id @default(cuid())
  name         String?
  parentFolder String?
  updatedAt    DateTime @updatedAt
  user         User?    @relation(fields: [userId], references: [id])
  userId       String?
}

model Document {
  content     String?
  createdAt   DateTime     @default(now())
  id          String       @id @default(cuid())
  permissions Permission[]
  title       String?
  updatedAt   DateTime     @updatedAt
  user        User?        @relation(fields: [userId], references: [id])
  userId      String?
}

model Permission {
  createdAt      DateTime                      @default(now())
  document       Document?                     @relation(fields: [documentId], references: [id])
  documentId     String?
  id             String                        @id @default(cuid())
  permissionType EnumPermissionPermissionType?
  updatedAt      DateTime                      @updatedAt
  user           User?                         @relation(fields: [userId], references: [id])
  userId         String?
}

model User {
  address     String?
  createdAt   DateTime     @default(now())
  documents   Document[]
  email       String?      @unique
  firstName   String?
  folders     Folder[]
  id          String       @id @default(cuid())
  lastName    String?
  password    String
  permissions Permission[]
  phoneNumber String?
  roles       Json
  updatedAt   DateTime     @updatedAt
  username    String       @unique
}

enum EnumPermissionPermissionType {
  Option1
}
